<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ url_for('static',filename='css/event.css') }}">
    <title>{{ event_row[1] }}</title>
</head>

<body>
    {% extends 'header.html.jinja' %} {% block content %}
    <div id="headingholders">
        <br><br>
        <H1 id="HEADING1">> {{ event_row[1] }}</H1>
        <H3 id="HEADING">> {{ event_row[3][:100] }}</H3>
        <H3 id="HEADING">> {{ event_row[2] }}</H3>
    </div>

    <br>
    <br>
    <div id="participents">
        <H3 id="HEADING">> Registered Students</H3>
        <table id="participents">
            <tr>
                <th>PID</th>
                <th>Roll Number</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
            {% for student in students %}
                <tr>
                    <td>{{ student[0] }}</td>
                    <td>{{ student[1] }}</td>
                    <td>{{ student[2] }}</td>
                    <td>{{ student[3] }}</td>
                </tr>
            {% endfor %}
        </table>
        <br><br><br>

        <H3 id="HEADING">> Registered Faculties</H3>
        <table id="participents">
            <tr>
                <th>PID</th>
                <th>Faculty ID</th>
                <th>Name</th>
                <th>Contact Number</th>
            </tr>
            {% for faculty in faculties %}
                <tr>
                    <td>{{faculty[0]}}</td>
                    <td>{{faculty[1]}}</td>
                    <td>{{faculty[2]}}</td>
                    <td>{{faculty[3]}}</td>
                </tr>
            {% endfor %}
        </table>
        <br><br><br>

        <H3 id="HEADING">> External Students</H3>
        <table id="participents">
            <tr>
                <th>PID</th>
                <th>Aadhar Number</th>
                <th>Name</th>
                <th>College</th>
            </tr>
            {% for outsider in outsiders %}
                <tr>
                    <td>{{outsider[0]}}</td>
                    <td>{{outsider[1]}}</td>
                    <td>{{outsider[2]}}</td>
                    <td>{{outsider[3]}}</td>
                </tr>
            {% endfor %}
        </table>

    </div>
    <div id="gap">

    </div>
    <div id="gap">

    </div>

    {% endblock %}
</body>

</html>